generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Lecturer {
  UUID           String        @id @default(uuid())
  title_before   String?
  first_name     String
  middle_name    String?
  last_name      String
  title_after    String?
  picture_url    String?
  location       String
  claim          String
  bio            String
  tags           LecturerTag[]
  price_per_hour Int
}

model LecturerTag {
  UUID         String    @id @default(uuid())
  lecturer     Lecturer? @relation(fields: [lecturerUUID], references: [UUID])
  tag          Tag?      @relation(fields: [tagUUID], references: [UUID])
  lecturerUUID String?
  tagUUID      String?
}

model Tag {
  UUID      String        @id @default(uuid())
  name      String        @unique
  lecturers LecturerTag[]
}
